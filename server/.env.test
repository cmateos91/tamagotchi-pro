# Configuración para testing
NODE_ENV=test

# Base de datos de prueba (usar base de datos separada)
DATABASE_URL=postgresql://postgres:testpass@localhost:5432/tamagotchi_test
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tamagotchi_test
DB_USER=postgres
DB_PASSWORD=testpass

# JWT para tests
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Puerto para tests
PORT=3001

# Configuración de rate limiting para tests (más permisiva)
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=1000

# Desactivar logs en tests
LOG_LEVEL=error

